@model Blog.web.Models.ViewModels.ListTagRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div>
        <h1>Show all tags</h1>
    </div>
</div>


<div class="container py-5">
    @if(Model!=null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var tag in Model.tagsList)
                {
                    <tr>
                        <td class="py-2">@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>